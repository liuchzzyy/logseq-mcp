# ==============================================================================
# logseq-mcp Configuration Template
# ==============================================================================
#
# This is a configuration template for logseq-mcp.
# Copy this file to .env and fill in your actual values.
#
# ==============================================================================

# ==================== MCP Server ====================
SERVER_NAME=logseq-mcp

# ==================== Logseq API Configuration ====================
# Get your API token from Logseq
LOGSEQ_API_TOKEN=your_logseq_api_token_here
LOGSEQ_API_URL=http://localhost:12315
LOGSEQ_API_TIMEOUT=10
LOGSEQ_API_MAX_RETRIES=3

# ==================== Feature Flags ====================
# Enable advanced query and task tools (default: true)
LOGSEQ_ENABLE_ADVANCED_QUERIES=true
LOGSEQ_ENABLE_GIT_OPERATIONS=false

# ==============================================================================
